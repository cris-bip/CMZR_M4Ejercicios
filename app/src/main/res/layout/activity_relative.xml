<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".componentesgraficos.RelativeActivity">

    <TextView
        android:text="Bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingVertical="10dp"/>

    <TextView
        android:text="Cristian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_above="@id/contraseniaText"/>
    <EditText
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:id="@+id/contraseniaText"
        android:hint="Contraseña"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/sinContrasenia"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contraseniaText"
        android:text="Olvidé mi contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:text="Entrar"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/sinContrasenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:text="Entrar con huella digital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>